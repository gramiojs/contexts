{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ES2022",
		"module": "ESNext",
		"moduleDetection": "force",

		/* Bundler mode */
		"moduleResolution": "bundler",
		"declaration": true,
		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist",
		"noEmit": true,
		"allowImportingTsExtensions": true
	},
	"include": ["src/**/*.ts"]
}
