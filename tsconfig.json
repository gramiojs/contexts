{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleDetection": "force",

        /* Bundler mode */
        "declaration": true,
        /* Linting */
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": ["src/**/*.ts"]
}
